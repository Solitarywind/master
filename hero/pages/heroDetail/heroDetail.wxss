.emp {
    color: #a6acce;
    font-size: 14px;
    border-bottom: 1px solid #313948;
    height: 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
  }
  
  .history {
    
  }
  
  .historyimag {
    width: 120px;
    height: 30px;
  }
  
  .heroName {
    text-align: center;
    font-size: 20px;
    line-height: 30px;
    color: #a6acce;
  }
  
  .heroDetail {
    color: #888da7;
    font-size: 14px;
    padding: 20px;
    line-height: 1.8;
  }
  
  .itemimg {
    width: 100%;
  }
  
  .itemtext {
    text-indent: 28px;
  }
  
  .showModal{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:rgba(8,32,44,1);
    padding-top:25%;
  }
  
  .showModel-title{
    color:#fff;
    text-align:center;
    font-size:80rpx;
    margin-bottom:5%;
  }